@model TuristicheskaAganciq.Data.Country

@{
    ViewData["Title"] = "Details";
}

<h1>Детайли</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Държава:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           Дата на промяна:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateModified)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Промени</a> 
    <a class="btn btn-primary" asp-action="Index">Назад</a>
</div>
