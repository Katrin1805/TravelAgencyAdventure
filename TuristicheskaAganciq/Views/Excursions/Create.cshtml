@model TuristicheskaAganciq.Data.Excursion

@{
    ViewData["Title"] = "Create";
}

<h1>Добави</h1>

<h4>Екскурзия</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExcursionNumber" class="control-label">Номер на екскурзията</label>
                <input asp-for="ExcursionNumber" class="form-control" />
                <span asp-validation-for="ExcursionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationsId" class="control-label">Дестинация</label>
                <select asp-for="DestinationsId" class ="form-control" asp-items="ViewBag.DestinationsId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label">Продължителност</label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Маршрут</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VidTransport" class="control-label">Вид транспорт</label>
                <input asp-for="VidTransport" class="form-control" />
                <span asp-validation-for="VidTransport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
      @*       <div class="form-group">
                <label asp-for="DateRegister" class="control-label"></label>
                <input asp-for="DateRegister" class="form-control" />
                <span asp-validation-for="DateRegister" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
